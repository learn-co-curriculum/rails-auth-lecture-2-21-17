<h1>Register a new user account</h1>

<%= form_for @user, url: signup_path(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit 'Signup' %>
<% end %>